	alter table `miscThings` modify db_snippet_connection  after db_schema;
	show columns in 'miscThings';

 alter table `miscThings` modify db_snippet_connection   VARCHAR (100) 	AFTER  `db_schema`;
 alter table `miscThings` modify db_data_connection  VARCHAR (100) 		AFTER  `db_schema`;
 alter table `miscThings` modify user_id  int (11) 						AFTER  `id`;

 alter table `miscThings` modify db_snippet_connection  VARCHAR (100) 	AFTER  `key_field_name`;
 alter table `miscThings` modify db_data_connection  VARCHAR (100) 		AFTER  `db_snippet_connection`;
 alter table `miscThings` modify user_id  int (11) 						AFTER  `db_data_connection`;



alter table `miscThings` add business_rules_array varchar(100) default NULL AFTER  `business_rules`;
alter table `miscThings` add query_array  varchar(100) default NULL 		AFTER  `query_value_array `;
alter table `miscThings` add business_rules_array varchar(100) default NULL AFTER  `business_rules`;

